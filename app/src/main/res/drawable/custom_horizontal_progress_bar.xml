<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <padding
                android:bottom="@dimen/spacing_tiny"
                android:left="@dimen/spacing_tiny"
                android:right="@dimen/spacing_tiny"
                android:top="@dimen/spacing_tiny" />
            <corners android:radius="@dimen/spacing_small" />
            <solid android:color="@android:color/black" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/spacing_small" />
                <stroke
                    android:width="@dimen/spacing_tiny"
                    android:color="@android:color/black" />
                <solid android:color="@color/accent" />
            </shape>
        </clip>
    </item>
</layer-list>