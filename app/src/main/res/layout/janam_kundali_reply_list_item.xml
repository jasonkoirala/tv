<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_card_vod"
    android:orientation="vertical"
    android:padding="@dimen/spacing_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Name:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliReplyName"
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="name"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Birth Place:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliReplyBirthPlace"
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="birth place"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Birth Date:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliReplyDate"
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="birth date"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Birth Time:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliReplyTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="birth time"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Gender:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliReplyGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="sex"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Your query:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliReplyQuery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="query"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Reply:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliReply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="reply"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Requested on:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliRequestedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="date"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            style="@android:style/TextAppearance.Medium.Inverse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Replied on:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewJanamKundaliRepliedDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="@dimen/spacing_tiny"
            android:text="date"
            android:textColor="@color/primary_text_inverse"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/watch_video_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_weight=".75"
            android:padding="@dimen/spacing_tiny"
            android:text="Watch It:"
            android:textColor="@color/primary"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_below="@id/watch_video_view"
                android:layout_gravity="left"
                android:src="@drawable/ic_entertainment_play"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <com.shirantech.sathitv.widget.CustomFontButton
        android:id="@+id/buttonViewCheena"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:padding="@dimen/spacing_small"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:background="@drawable/selector_green_button"
        android:text="View cheena"
        android:textAllCaps="false"
    android:textColor="@color/primary_text_inverse"/>
</LinearLayout>