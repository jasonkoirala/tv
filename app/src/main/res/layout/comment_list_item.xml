<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/spacing_small">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginRight="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal"
        android:orientation="vertical">

        <com.shirantech.sathitv.widget.CustomFontBoldTextView
            android:id="@+id/username_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/comment_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.shirantech.sathitv.widget.CustomFontItalicTextView
            android:id="@+id/comment_status_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message_posting_comment"
            android:textSize="12sp"
            android:visibility="gone" />

    </LinearLayout>
</android.support.v7.widget.CardView>