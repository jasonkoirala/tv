<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_material_light"

    app:cardCornerRadius="@dimen/spacing_small">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/program_time_view"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/primary_dark"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_medium"
            android:text="12:66 am"
            android:textColor="@color/primary_text_inverse" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/program_name_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/spacing_medium"
            android:text="program name can be long" />

    </LinearLayout>
</android.support.v7.widget.CardView>