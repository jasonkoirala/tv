<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/spacing_medium"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutSender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewChatSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_tiny"
            android:background="@drawable/bg_edittext_sender"
            android:padding="@dimen/spacing_medium"
            android:text="I am semder"
            android:textColor="@color/primary_text_inverse" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageViewSender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_tiny"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/image_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:pressedStateOverlayImage="@color/primary_transparent"
            fresco:retryImage="@android:drawable/stat_notify_sync_noanim"
            fresco:retryImageScaleType="centerCrop"
            fresco:roundedCornerRadius="4dp"
            fresco:roundingBorderColor="@color/transparent_white"
            fresco:roundingBorderWidth="2dp"
            fresco:viewAspectRatio="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutReceiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/imageViewReciever"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/spacing_tiny"
            fresco:actualImageScaleType="focusCrop"
            fresco:fadeDuration="300"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/image_placeholder"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:pressedStateOverlayImage="@color/primary_transparent"
            fresco:retryImage="@android:drawable/stat_notify_sync_noanim"
            fresco:retryImageScaleType="centerCrop"
            fresco:roundedCornerRadius="4dp"
            fresco:roundingBorderColor="@color/transparent_white"
            fresco:roundingBorderWidth="2dp"
            fresco:viewAspectRatio="1" />

        <com.shirantech.sathitv.widget.CustomFontTextView
            android:id="@+id/textViewChatReceiver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_tiny"
            android:background="@drawable/bg_edittext"
            android:padding="@dimen/spacing_medium"
            android:text="I am receiver"
            android:textColor="@color/black" />


    </LinearLayout>
</LinearLayout>