<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.SathiTv" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>

        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!--   theme UI controls like checkboxes and text fields e.g. FloatActionButton -->
        <item name="colorAccent">@color/primary_dark</item>

        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_inverse</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_inverse</item>

        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textColorHintInverse">@color/hint_text_inverse</item>

        <!-- Flag indicating whether this window should have an Action Bar in place of the usual title bar. -->
        <item name="windowActionBar">false</item>
        <!-- Flag indicating whether this window's Action Bar should overlay application content. Does nothing if the window would not have an Action Bar. -->
        <item name="windowActionBarOverlay">true</item>
        <!-- Flag indicating whether there should be no title on this window. -->
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppBaseTheme" parent="Base.Theme.SathiTv">
        <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="alertDialogTheme">@style/AlertDialogStyle</item>
    </style>

    <!-- Theme for transparent status bar -->
    <style name="AppTheme.Detail" parent="AppTheme">

    </style>

    <style name="AppTheme.White" parent="AppTheme">

        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="AppTheme.Black" parent="AppTheme">
        <!-- Title Text Color -->
        <item name="android:textColorPrimary">@color/primary_text_inverse</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_inverse</item>

        <!-- color of the menu overflow icon (three vertical dots) -->
        <item name="android:textColorSecondary">@color/secondary_text_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_inverse</item>

        <item name="android:textColorHint">@color/hint_text_inverse</item>
        <item name="android:textColorHintInverse">@color/hint_text_inverse</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primary_dark</item>
        <item name="android:textAlignment">center</item>
        <!-- Used for the title and text -->
        <!--<item name="android:textColorPrimary">@color/primary_text</item>-->
        <!-- Used for the background -->
        <!--<item name="android:background">@color/window_background</item>-->
    </style>

    <style name="RatingBarStyle" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_layer_list</item>
        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="HorizontalProgressStyle" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_horizontal_progress_bar</item>
        <item name="android:minHeight">@dimen/spacing_medium</item>
        <item name="android:maxHeight">@dimen/spacing_normal</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/transparent_black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
