<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- This attribute is used to set the text color to message in custom progress view -->
    <declare-styleable name="CustomProgressView">
        <!-- color to set to the message -->
        <attr name="message_color" format="reference" />
    </declare-styleable>

    <!-- This attribute is used to assign the aspect ratio to the FrameLayout. -->
    <declare-styleable name="FixedAspectRatioFrameLayout">
        <!-- Specifies the width in the aspect ratio.
        For eg For aspect ratio of 16:9, this attr should be 16. -->
        <attr name="ratio_width" format="integer" />
        <!-- Specifies the height in the aspect ratio.
        For eg For aspect ratio of 16:9, this attr should be 9. -->
        <attr name="ratio_height" format="integer" />
    </declare-styleable>

    <!-- This attribute is used to assign the dimens to the SurfaceView. -->
    <declare-styleable name="VideoSurfaceView">
        <!-- Specifies the width for the video. -->
        <attr name="video_width" format="integer" />
        <!-- Specifies the height for the video. -->
        <attr name="video_height" format="integer" />
    </declare-styleable>
</resources>